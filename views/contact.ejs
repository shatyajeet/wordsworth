<% layout('layout') %>

<div class="container">
  <h2>Contact us</h2>
  <p>You can connect with us through our <a href="https://www.facebook.com/The-WordsWorth-Project-315598845315440/timeline/">facebook</a> page or email us on our email id. Alternatively drop us your query and we will get back to you:</p>
  <div class="contact-form row">
    <form name="contactForm" class="col l6">
      <div class="row">
        <div class="input-field col l12">
          <input id="name" name="name" type="text" class="validate">
          <label for="name">Name</label>
        </div>
      </div>
      <div class="row">
        <div class="input-field col l12">
          <input id="phone" name="phone" type="text" class="validate">
          <label for="phone">Contact number</label>
        </div>
      </div>
      <div class="row">
        <div class="input-field col l12">
          <input id="email" name="email" type="email" class="validate">
          <label for="email" data-error="Enter valid email address">Email address</label>
        </div>
      </div>
      <div class="row">
        <div class="input-field col l12">
          <textarea id="query" name="query" class="materialize-textarea"></textarea>
          <label for="query">Query</label>
        </div>
      </div>
      <div class="row">
        <div class="col s12">
          <button class="btn waves-effect waves-light" type="submit" name="action">Submit
            <i class="material-icons right">send</i>
          </button>
        </div>
      </div>
    </form>
  </div>
</div>
